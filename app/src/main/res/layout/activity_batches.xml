<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lbl_NewBatchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btnAddBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Batch"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        />
    <EditText
        android:id="@+id/textNewBatchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_NewBatchName"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/btnAddBatch"
        />
    <ListView
        android:id="@+id/listBatchNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/textNewBatchName" />
</RelativeLayout>